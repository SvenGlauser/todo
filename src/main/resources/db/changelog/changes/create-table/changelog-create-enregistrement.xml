<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.8.xsd">

        <changeSet id="create-table-enregistrement" author="Sven Glauser">
            <createTable tableName="ENREGISTREMENT"
                         schemaName="ANALYTICS">
                <column name="ID"
                        type="INTEGER"
                        autoIncrement="true"/>

                <column name="DATE"
                        type="DATE"/>

                <column name="UTILISATEUR"
                        type="INTEGER"/>

                <column name="ACTION"
                        type="INTEGER"/>
            </createTable>

            <addPrimaryKey schemaName="ANALYTICS"
                           tableName="ENREGISTREMENT"
                           columnNames="ID"
                           constraintName="PK_ID_ENREGISTREMENT"/>

            <addForeignKeyConstraint baseTableSchemaName="analytics"
                                     baseTableName="ENREGISTREMENT"
                                     baseColumnNames="UTILISATEUR"
                                     constraintName="FK_ENREGISTREMENT_UTILISATEUR"
                                     referencedTableSchemaName="analytics"
                                     referencedTableName="UTILISATEUR"
                                     referencedColumnNames="ID"/>

            <addForeignKeyConstraint baseTableSchemaName="analytics"
                                     baseTableName="ENREGISTREMENT"
                                     baseColumnNames="ACTION"
                                     constraintName="FK_ENREGISTREMENT_ACTION"
                                     referencedTableSchemaName="analytics"
                                     referencedTableName="ACTION"
                                     referencedColumnNames="ID"/>
        </changeSet>
</databaseChangeLog>