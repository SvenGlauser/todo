<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.8.xsd">

    <changeSet id="create-table-action" author="Sven Glauser">
        <createTable tableName="ACTION"
                     schemaName="analitycs">
            <column name="ID"
                    type="INTEGER"
                    autoIncrement="true"/>

            <column name="NOM"
                    type="VARCHAR2(255)"/>

            <column name="DESCRIPTION"
                    type="VARCHAR2(255)"/>
        </createTable>

        <addPrimaryKey schemaName="analitycs"
                       tableName="ACTION"
                       columnNames="ID"
                       constraintName="PK_ID_ACTION"/>
    </changeSet>
</databaseChangeLog>