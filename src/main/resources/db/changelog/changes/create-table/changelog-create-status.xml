<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.8.xsd">

        <changeSet id="create-table-status" author="Sven Glauser">
            <createTable tableName="tb_status"
                         schemaName="todo">
                <column name="id"
                        type="INTEGER"
                        autoIncrement="true"/>

                <column name="statusname"
                        type="VARCHAR2(255)"/>

                <column name="statusdescription"
                        type="VARCHAR2(255)"/>
            </createTable>

            <addPrimaryKey schemaName="todo"
                           tableName="tb_status"
                           columnNames="id"
                           constraintName="pk_id_tb_status"/>

            <addUniqueConstraint schemaName="todo"
                                 tableName="tb_status"
                                 columnNames="statusname"
                                 constraintName="ct_un_statusname_tb_status"/>
        </changeSet>
</databaseChangeLog>