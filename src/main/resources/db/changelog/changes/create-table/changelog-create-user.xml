<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.8.xsd">

    <changeSet id="create-table-user" author="Sven Glauser">
        <createTable tableName="tb_user"
                     schemaName="todo">
            <column name="id"
                    type="INTEGER"
                    autoIncrement="true"/>

            <column name="username"
                    type="VARCHAR2(255)"/>

            <column name="password"
                    type="VARCHAR2(255)"/>
        </createTable>

        <addPrimaryKey schemaName="todo"
                       tableName="tb_user"
                       columnNames="id"
                       constraintName="pk_id_tb_user"/>

        <addUniqueConstraint schemaName="todo"
                             tableName="tb_user"
                             columnNames="username"
                             constraintName="ct_un_username_tb_user"/>
    </changeSet>
</databaseChangeLog>